# LocalData MCP Environment Variables Examples
# This file shows various ways to configure LocalData MCP using environment variables

# === LEGACY ENVIRONMENT VARIABLES (Backward Compatibility) ===
# These are automatically detected and converted to connection strings

# PostgreSQL legacy variables
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=admin
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=production_db

# MySQL legacy variables  
MYSQL_HOST=mysql.example.com
MYSQL_PORT=3306
MYSQL_USER=dbuser
MYSQL_PASSWORD=dbpass
MYSQL_DB=application_db

# SQLite legacy variables
SQLITE_PATH=/data/app.sqlite

# DuckDB legacy variables
DUCKDB_PATH=/data/analytics.duckdb

# === MODERN GRANULAR ENVIRONMENT VARIABLES ===
# These use the LOCALDATA_DB_<name>_<property> pattern

# Analytics PostgreSQL database
LOCALDATA_DB_ANALYTICS_TYPE=postgresql
LOCALDATA_DB_ANALYTICS_CONNECTION_STRING=postgresql://user:pass@analytics-server:5432/analytics_prod
LOCALDATA_DB_ANALYTICS_ENABLED=true
LOCALDATA_DB_ANALYTICS_MAX_CONNECTIONS=15
LOCALDATA_DB_ANALYTICS_CONNECTION_TIMEOUT=45
LOCALDATA_DB_ANALYTICS_QUERY_TIMEOUT=600

# Redis cache database
LOCALDATA_DB_CACHE_TYPE=redis
LOCALDATA_DB_CACHE_CONNECTION_STRING=redis://cache-server:6379/0
LOCALDATA_DB_CACHE_ENABLED=true
LOCALDATA_DB_CACHE_MAX_CONNECTIONS=20

# File-based Excel data source
LOCALDATA_DB_REPORTS_TYPE=excel
LOCALDATA_DB_REPORTS_CONNECTION_STRING=/shared/reports/monthly_report.xlsx
LOCALDATA_DB_REPORTS_SHEET_NAME=Summary
LOCALDATA_DB_REPORTS_ENABLED=true

# Development database (disabled in production)
LOCALDATA_DB_DEV_TYPE=sqlite
LOCALDATA_DB_DEV_CONNECTION_STRING=/tmp/development.sqlite
LOCALDATA_DB_DEV_ENABLED=false

# === LOGGING CONFIGURATION ===
LOCALDATA_LOG_LEVEL=info
LOCALDATA_LOG_FILE=/var/log/localdata-mcp.log

# === PERFORMANCE CONFIGURATION ===
LOCALDATA_MEMORY_LIMIT_MB=4096

# === ENVIRONMENT VARIABLES FOR YAML SUBSTITUTION ===
# These are used in YAML files with ${VAR} syntax

# Database connection details
DB_HOST=production-postgres.company.com
DB_PORT=5432
DB_USER=localdata_user
DB_PASSWORD=super_secure_password_here
DB_NAME=localdata_production

# Redis connection details
REDIS_HOST=redis-cluster.company.com
REDIS_PORT=6379
REDIS_DB=2

# File system paths
DATA_PATH=/mnt/shared-data
LOG_PATH=/var/log/localdata

# Feature flags
ENABLE_DEV_DB=false
ENABLE_METRICS=true
ENABLE_DEBUG=false

# Performance tuning
CHUNK_SIZE=500
MAX_CONNECTIONS=25
MEMORY_LIMIT_MB=8192

# Monitoring and alerting
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60